<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="${relativePackage}.${activityClass}" >
    
    <TextView
        android:id="@+id/txt_main_density"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/txt_main_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_main_density"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="80dp"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_main_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_main_density"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="45dp"
        android:textColor="#f00"
        android:textSize="40sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp" >

        <Button
            android:id="@+id/btn_main_clear"
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/clear"
            android:padding="15dp"
            android:text="@string/clear"
            android:textColor="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_main_setup"
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_main_clear"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/setup"
            android:padding="15dp"
            android:text="@string/setup"
            android:textColor="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_main_health"
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_main_clear"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/health"
            android:padding="15dp"
            android:text="@string/health"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>